#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void cargar(int vec[],int tam);
void ordenar(int vec[],int tam);
void mostrar(int vec[],int tam);


void main()
{   

	int n, vec[MAX], opcion;
	do{
	cout<<"Ingrese el numero de elementos:"<<endl;
	cin>>n;
	}while (n>MAX || n<=0);
	
	do{
	cout<<"--------------MENU--------------"<<endl;
	cout<< "1. Cargar vector:"<<endl;
	cout<< "2. Ordenar vector"<<endl;
	cout<< "3. Mostrar vector"<<endl;
	cout<< "4. Salir"<<endl;
	cout<< "Opcion:"<<endl;
	cin>>opcion;
	
	switch (opcion)
	{
	case 1:
	cargar(vec,n);
	break;
	case 2:
	ordenar(vec,n);
	break;
	case 3:
	mostrar(vec,n);
	break;
	case 4:
	    cout<<"Usted ha decidido salir del programa"<<endl;
	    break;
	default:
		cout<<"Opcion invalida"<<endl;
		break;
	}
	}while (opcion !=4);
	getch();
}


void cargar(int vec[],int tam)
{
	for(int i=0;i<tam;i++)
	{
		
		cout<< "Ingrese el valor para vec["<< i << "]=";
		cin>> vec[i];
	}
}
void ordenar(int vec[],int tam)
{
	int aux,m;
	for (int i=0;i<tam-1;i++)
	{
		for(int j=i+1;j<tam;j++)
		{
			if(vec[i]>vec[j]) 
			{
				aux=vec[j];
				vec[j]=vec[i];
				vec[i]=aux;
			}
		}
	}
}

void mostrar(int vec[],int tam)
{   
	for(int i=0;i<tam;i++)
	{
		cout<< "vec["<< i << "]=";
		cout<< vec[i]<<endl;
	}
}
