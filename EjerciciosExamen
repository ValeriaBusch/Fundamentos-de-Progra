#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()

{
	int numcamisas;
	float preciototal, totalpagardcto;

	do{
		cout<<"Ingresar numero de camisas:";
		cin>>numcamisas;
	}
while (numcamisas<0);
	do{
		cout<<"Ingresar precio de la camisas:";
		cin>>preciototal;
	}
while (preciototal<0);
if (numcamisas<=5)
	totalpagardcto=numcamisas*preciototal*0.7;
else 
	totalpagardcto=numcamisas*preciototal*0.8;
 cout<<"El total a pagar con descuento:" <<totalpagardcto;
 getch();
}



#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()

{
	int numbolita;
	float preciototal;

	do{
		cout<<"Ingresar numero de bolita:";
		cin>>numbolita;
	}
while (numbolita<0);
	do{
		cout<<"Ingresar precio:";
		cin>>preciototal;
	}
while (preciototal<=0);
if (numbolita==3)
 cout<<"El total a pagar con descuento:" <<preciototal;
else
	if (numbolita==5)
 cout<<"El total a pagar con descuento:" <<preciototal*0.05;
	else
	if (numbolita==7)
 cout<<"El total a pagar con descuento:" <<preciototal*0.3;
	else
			if (numbolita==9)
 cout<<"El total a pagar con descuento:" <<preciototal*0.5;
			else 
				cout<<"Error numero de bolita no copnsiderado"<<endl;
 getch();
}
