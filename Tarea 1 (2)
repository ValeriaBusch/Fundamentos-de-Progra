#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Math.h"

using namespace std;
 void main ()
{
	float	r, P, A, pi=3.141592;
	cout<<"Ingrese el radio de la circunferencia en centimetros:"<<endl; 
	cin>>r;
	A=pi*pow(r,2);
	P=2*pi*r;
	cout<<"El area de la circunferencia es:"<<A<<"cm2."<<endl;
	cout<<"El perimetro de la circunferencia es:"<<P<<"cm."<<endl;
	getch ();

}


Proceso Circunferencia
	Escribir "Inserte el radio de la circunferencia en centímetros:"
	Leer r
	A<-r*r*3.141592
	P<-2*3.141592*r
	Escribir "El área de la circunferencia es:" ,A
	Escribir "El perímetro de la circunferencia es:" ,P
FinProceso
