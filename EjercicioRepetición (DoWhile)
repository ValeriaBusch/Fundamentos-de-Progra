#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main() 
{
	float salariobruto, salarioneto, sm=2060;
	char s;
	do {
        cout<<"Ingrese el salario del empleado:"<<endl;
		cin>>salariobruto;
		if (salariobruto>=4*sm) 
		
			salarioneto=salariobruto-(salariobruto*0.13);
		else 
			salarioneto=salariobruto-(salariobruto*0.121);
	
		cout <<"El salario neto es:"<<salarioneto<<endl;
		cout<<"Desea continuar?"<<endl;
		cin>>s;
	} while (s=='s');
	getch();
}

